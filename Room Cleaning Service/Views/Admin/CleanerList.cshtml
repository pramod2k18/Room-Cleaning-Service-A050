@model IEnumerable<RoomCleaning.Models.Cleaner>

@Model dynamic;
@{ ViewBag.Title = "ServicesList";
    Layout = null; }                                                                         @*changed*@

    <head>
        @*changed*@
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>



    <style>
    body {
        /* background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.5)), url(/imgs/adminIndex.jpg);*/
        background-color: #a4c3b2;
        min-height: 100vh;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: stretch;
    }

    .headers {
        margin-top: 100px;
        margin-bottom: 50px;
    }

       a.my-class {
        color: #fff;
    }


        a.my-class:active {
            color: #fff;
        }

        a.my-class:link {
            color: #fff;
        }

        a.my-class:visited {
            color: #fff;
        }

        a.my-class:hover {
            color: #999999;
        }

    .back {
        margin: 50px 0;
    }

    .containers {
        max-width: 100%;
        margin: 0 30px;                                          @*changed*@
        padding: 0 1rem;
    }

        .generate {
            margin-top: 50px;
            font-size: 1.10rem;
        }

    .centered {
        margin-left: 100px;
    }

    </style>


    <body>
        <div class="containers">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="@Url.Action("Index","FrontPage")" style="font-size: 2.5em">Room Cleaning</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                </div>
            </nav>

            <div class="headers">
                <h2>Cleaner List</h2>
            </div>


            @using (Html.BeginForm())
            {
                <span style="font-size:1.1rem">Location</span>@Html.DropDownList("location", new SelectList(ViewBag.LocationCleaner), new { @class = "btn btn-light btn-sm dropdown-toggle" })
                <input type="submit" value="Search" class="btn btn-sm btn-light" />}
            <br />

            <table class="table table-dark table-striped table-hover">
                <tr style="font-size: 12px">
                    <th>
                        @Html.DisplayNameFor(model => model.CleanerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdminApproved)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CleanerAssigned)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr style="font-size: 12px">
                        <td>
                            @Html.DisplayFor(modelItem => item.CleanerId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdminApproved)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CleanerAssigned)
                        </td>

                    </tr>
                }

            </table>

            <p class="generate">
                @Html.ActionLink("Generate Cleaner Pdf", "GenerateCleanerPdf", new { loc = Model.Select(x => x.Location).FirstOrDefault() })
            </p>

            <div class="back">
                @Html.ActionLink("Back", "GeneratePDF")
            </div>
        </div>
    </body>
