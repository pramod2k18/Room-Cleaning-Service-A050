    }

    .button-color {
        background-color: #1BBC9C;
        border-radius: 30px;
        color: white;
        font-weight: bold;
        width: 150px;
        height: 50px;
    }

    .table-spacing {
        padding: 10px 0;
        font-size: 1.25rem;
        font-weight: 600;
    }

    .content-spacing {
        padding-left: 90px;
        font-size: 1.25rem;
        font-weight: 400;
    }

