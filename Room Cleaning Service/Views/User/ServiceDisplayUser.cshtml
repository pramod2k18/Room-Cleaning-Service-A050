@model IEnumerable<RoomCleaning.Models.Service>

@{ ViewBag.Title = "ServiceDisplayUser";
    Layout = null; }

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>


<style>
    body {
        background-color: #a4c3b2;
        min-height: 100vh;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: stretch;
    }

    .headers {
        margin-top: 150px;
        margin-bottom: 50px;
    }

    .move {
        margin-top: 50px;
        margin-left: 210px;
    }

    .move-pdf {
        margin-top: 50px;
        /*margin-left: 210px;*/
    }

    a.my-class {
        color: #fff;
    }


        a.my-class:active {
            color: #fff;
        }

        a.my-class:link {
            color: #fff;
        }

        a.my-class:visited {
            color: #fff;
        }

        a.my-class:hover {
            color: #999999;
        }

    .email-color {
        color: #fff;
    }

    .containers {
        max-width: 100%;
        margin: 0 30px;
        padding: 0 1rem;
    }

    .back {
        margin: 50px 0;
    }
</style>


<body>
    <div class="containers">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index","FrontPage")" style="font-size: 2.5em">Room Cleaning</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

            </div>
        </nav>

        <div class="headers">
            <h2>Display Service</h2>
        </div>

        <table class="table table-dark table-striped table-hover">
            <tr style="font-size: 12px">
                <th>
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeSlot)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status_Admin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status_Cleaner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service_Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cleaner_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Payment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserEmail)
                </th>
                <th></th>
                <th></th>

            </tr>

            @foreach (var item in Model)
            {
                <tr style="font-size: 12px">
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeSlot)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status_Admin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status_Cleaner)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service_Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cleaner_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Payment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>
                    <td>
                        @Html.ActionLink("Make Payment", "Payment", new { id = item.OrderId }, new { @class = "my-class" })
                    </td>
                    <td>
                        @Html.ActionLink("Give Feedback", "Feedback", new { id = item.OrderId }, new { @class = "my-class" })
                    </td>

                </tr>
}

        </table>

        <div class="back">
            @Html.ActionLink("BACK", "UserIndex", "User")

        </div>

    </div>
</body>
