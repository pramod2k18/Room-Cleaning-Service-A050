@model RoomCleaning.Models.Payment

@{ ViewBag.Title = "WalletPayment"; }



<style>
    body {
        /* background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.5)), url(/imgs/adminIndex.jpg);*/
        background-color: #a4c3b2;
        min-height: 100vh;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: stretch;
    }

    .headers {
        margin-top: 150px;
        margin-bottom: 50px;
    }

    .button-color {
        background-color: #1BBC9C;
        border-radius: 30px;
        color: white;
        font-weight: bold;
        width: 150px;
        height: 50px;
    }

    .outline {
        border-radius: 30px;
        height: 40px;
    }

    .contents {
        font-size: 1.2rem;
    }

    .title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-left: 20px;
        text-align: left;
    }

    input[type="checkbox"] {
        height: 20px;
        width: 20px;
        margin-left: 15px;
    }


    .top {
        margin-top: 30px;
    }

    .back {
        margin-top: 50px;
        margin-left: 20px;
        margin-bottom: 50px;
        font-size: 1.15rem;
    }
    .centered {
        margin-left: 100px;
    }
    .containers {
        max-width: 100%;
        margin: 0 50px;
        padding: 0 1rem;
    }

</style>


<body>
    <div class="containers">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index","FrontPage")" style="font-size: 2.5em">Room Cleaning</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">

        </div>
    </nav>

    <div class="headers">
        <h2>Wallet Payment</h2>
    </div>

    <h4>
        Total Amount to Be Paid <strong>@ViewBag.Amount</strong>
    </h4>
    <hr />

    <div>
        @using (Html.BeginForm("ServiceDisplayUser", "User"))
        {
<input type="submit" value="Google Pay" class="btn button-color top" />}
    </div>
    <br />
    <div>
        @using (Html.BeginForm("ServiceDisplayUser", "User"))
         {
            <input type="submit" value="PhonePe" class="btn button-color top" />
         }
    </div>

    <div class="back">
        @Html.ActionLink("BACK", "PaymentOption", "User")
    </div>
        </div>
</body>
